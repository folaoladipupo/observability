{
  "title": "API SLO Dashboard",
  "panels": [
    {
      "type": "gauge",
      "title": "API Availability (%)",
      "targets": [
        {
          "expr": "(sum(rate(api_request_total{status='success'}[5m])) / sum(rate(api_request_total[5m]))) * 100"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "min": 0,
          "max": 100,
          "thresholds": {
            "mode": "absolute",
            "steps": [
              {"color": "red", "value": 0},
              {"color": "orange", "value": 99.0},
              {"color": "green", "value": 99.9}
            ]
          }
        }
      }
    },
    {
      "type": "timeseries",
      "title": "API Latency (p95)",
      "targets": [
        {
          "expr": "histogram_quantile(0.95, sum(rate(api_request_duration_seconds_bucket[5m])) by (le))"
        }
      ]
    },
    {
      "type": "timeseries",
      "title": "Error Budget Burn (%)",
      "targets": [
        {
          "expr": "(1 - (sum(rate(api_request_total{status='success'}[5m])) / sum(rate(api_request_total[5m])))) * 100"
        }
      ]
    }
  ]
}
